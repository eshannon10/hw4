<h1><%= @place.name %></h1>

<h2>My Entries</h2>

<% if @place.entries.any? %>
  <% @place.entries.each do |entry| %>
    <div class="entry">
      <h3><%= entry.title %></h3>
      <h4><%= entry.occurred_on.strftime("%B %d, %Y") %></h4> <!-- Format the date nicely -->
      <p><%= entry.description %></p>

      <!-- âœ… Display Image if Attached -->
      <% if entry.image.attached? %>
        <p><%= image_tag entry.image, class: "img-fluid" %></p>
      <% end %>

    </div>
  <% end %>
<% else %>
  <p>No entries yet. Add one!</p>
<% end %>

<!-- âœ… Add New Entry Button -->
<%= link_to "Add New Entry", new_place_entry_path(@place), class: "btn btn-primary" %>
