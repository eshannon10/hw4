<h1><%= @place.name %></h1>

<h2>My Entries</h2>

<% if @place.entries.any? %>
  <div class="container">
    <div class="row">
      <% @place.entries.each do |entry| %>
        <div class="col-md-4 col-sm-6 mb-4"> <!-- 3 per row on large, 2 per row on medium, full width on small -->
          <div class="card shadow-sm">
            <div class="card-body">
              <h3 class="card-title"><%= entry.title %></h3>
              <h4 class="card-subtitle text-muted"><%= entry.occurred_on.strftime("%B %d, %Y") %></h4>
              <p class="card-text"><%= entry.description %></p>

              <!-- âœ… Display Image if Attached -->
              <% if entry.uploaded_image.attached? %>
                <div class="text-center">
                  <%= image_tag entry.uploaded_image, class: "img-fluid rounded" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>No entries yet. Add one!</p>
<% end %>

<!-- âœ… Add New Entry Button -->
<%= link_to "Add New Entry", new_place_entry_path(@place), class: "btn btn-primary mt-3" %>
